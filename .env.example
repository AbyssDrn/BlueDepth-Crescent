# BlueDepth-Crescent Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to git!

# ============================================================================
# HARDWARE CONFIGURATION
# ============================================================================
DEVICE=cuda                        # cuda or cpu
CUDA_VISIBLE_DEVICES=0             # GPU ID to use
MIXED_PRECISION=true               # Enable FP16 training


# ============================================================================
# PATHS
# ============================================================================
DATA_DIR=data                      # Dataset directory
CHECKPOINT_DIR=checkpoints         # Model checkpoints
LOG_DIR=logs                       # Training logs
RESULTS_DIR=results                # Output results


# ============================================================================
# TRAINING
# ============================================================================
BATCH_SIZE=16                      # Training batch size
NUM_EPOCHS=100                     # Number of training epochs
LEARNING_RATE=0.0001              # Initial learning rate
NUM_WORKERS=4                      # DataLoader workers


# ============================================================================
# MODEL
# ============================================================================
MODEL_NAME=unet_standard           # Model architecture
IMAGE_SIZE=256                     # Input image size


# ============================================================================
# LOGGING
# ============================================================================
TENSORBOARD_PORT=6006              # TensorBoard port
LOG_LEVEL=INFO                     # Logging level (DEBUG, INFO, WARNING, ERROR)


# ============================================================================
# API (Optional)
# ============================================================================
# API_KEY=your_api_key_here
# API_URL=http://localhost:8000


# ============================================================================
# DEPLOYMENT (Optional)
# ============================================================================
# DEPLOYMENT_MODE=production       # development or production
# SERVER_PORT=7860                 # Gradio server port
# ENABLE_SHARING=false             # Create public Gradio link
